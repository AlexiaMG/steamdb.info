{
	"manifest_version": 2,
	"version": "1.2.3",
	"name": "Steam Database",
	"short_name": "SteamDB",
	"description": "Adds Steam Database link across Steam Community and Store.",
	"homepage_url": "https://steamdb.info/",
	"options_page": "options/options.html",
	"icons":
	{
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"permissions":
	[
		"storage",
		"https://steamdb.info/",
		"http://store.steampowered.com/",
		"https://store.steampowered.com/",
		"http://steamcommunity.com/",
		"https://steamcommunity.com/"
	],
	"web_accessible_resources":
	[
		"icons/white.svg",
		"icons/pcgamingwiki.svg",
		"styles/store-center.css",
		"scripts/https-fix.js",
		"scripts/community/inventory.js",
		"scripts/store/subscriptions.js"
	],
	"content_scripts":
	[
		{
			"matches":
			[
				"https://steamdb.info/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/steamdb/global.js"
			]
		},
		{
			"matches":
			[
				"https://steamdb.info/sales/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/steamdb/sales.js"
			]
		},
		
		
		
		{
			"run_at": "document_end",
			"matches":
			[
				"*://store.steampowered.com/*"
			],
			"exclude_matches":
			[
				"*://store.steampowered.com/api/*",
				"*://store.steampowered.com/dynamicstore/*",
				"*://store.steampowered.com/checkout*",
				"*://store.steampowered.com/widget/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/global.js",
				"scripts/store/global.js"
			],
			"css":
			[
				"styles/global.css",
				"styles/store.css"
			]
		},
		{
			"matches":
			[
				"*://store.steampowered.com/app/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/app.js"
			],
			"css":
			[
				"styles/store.css"
			]
		},
		{
			"matches":
			[
				"https://store.steampowered.com/account*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/account.js"
			]
		},
		{
			"matches":
			[
				"*://store.steampowered.com/sub/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/sub.js"
			],
			"css":
			[
				"styles/store.css"
			]
		},
		{
			"all_frames": true,
			"matches":
			[
				"*://store.steampowered.com/widget/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/widget.js"
			],
			"css":
			[
				"styles/store.css"
			]
		},
		{
			"matches":
			[
				"*://store.steampowered.com/video/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/video.js"
			],
			"css":
			[
				"styles/store.css"
			]
		},
		{
			"run_at": "document_start",
			"matches":
			[
				"*://store.steampowered.com/agecheck/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/agecheck.js"
			]
		},
		{
			"matches":
			[
				"*://store.steampowered.com/cart*"
			],
			"js":
			[
				"scripts/store/cart.js"
			]
		},
		{
			"run_at": "document_end",
			"matches":
			[
				"*://store.steampowered.com/"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/store/homepage.js"
			]
		},
		
		
		
		{
			"run_at": "document_end",
			"matches":
			[
				"*://steamcommunity.com/*"
			],
			"exclude_matches":
			[
				"*://steamcommunity.com/miniprofile/*",
				"*://steamcommunity.com/actions/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/global.js"
			],
			"css":
			[
				"styles/global.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*",
				"*://steamcommunity.com/profiles/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile.js"
			],
			"css":
			[
				"styles/community.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/inventory*",
				"*://steamcommunity.com/profiles/*/inventory*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile_inventory.js"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/games*",
				"*://steamcommunity.com/profiles/*/games*",
				"*://steamcommunity.com/id/*/wishlist*",
				"*://steamcommunity.com/profiles/*/wishlist*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile_games.js"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/recommended/*",
				"*://steamcommunity.com/profiles/*/recommended/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile_recommended.js"
			],
			"css":
			[
				"styles/community.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/badges*",
				"*://steamcommunity.com/profiles/*/badges*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile_badges.js"
			],
			"css":
			[
				"styles/community.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/gamecards/*",
				"*://steamcommunity.com/profiles/*/gamecards/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/profile_gamecards.js"
			],
			"css":
			[
				"styles/community.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/app/*",
				"*://steamcommunity.com/games/*",
				"*://steamcommunity.com/sharedfiles/filedetails*",
				"*://steamcommunity.com/workshop/browse*",
				"*://steamcommunity.com/workshop/discussions*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/gamehub.js"
			],
			"css":
			[
				"styles/community.css"
			]
		},
		{
			"matches":
			[
				"*://steamcommunity.com/id/*/friendsthatplay/*",
				"*://steamcommunity.com/profiles/*/friendsthatplay/*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/friendsthatplay.js"
			]
		},
		{
			"all_frames": true,
			"matches":
			[
				"*://steamcommunity.com/market/*",
				"*://steamcommunity.com/id/*/inventory*",
				"*://steamcommunity.com/profiles/*/inventory*"
			],
			"js":
			[
				"scripts/common.js",
				"scripts/community/market_ssa.js"
			]
		}
	]
}
